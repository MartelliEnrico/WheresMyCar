{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Kotlin and Compose",
      "groupSlug": "kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin.android",
        "composeOptions"
      ]
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "labels": [
        "dependencies"
      ]
    }
  ],
  "extends": [
    "config:best-practices"
  ]
}
